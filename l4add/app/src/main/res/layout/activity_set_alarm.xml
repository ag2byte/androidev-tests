<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAlarm">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="228dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:headerBackground="@color/primaryblue"
            android:numbersSelectorColor="@color/secondaryblue"
            android:id="@+id/pick_time"

            />

        <EditText
            android:id="@+id/title_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#242B2E"
            android:hint="Alarm Title"

            android:textAlignment="center"
            android:textStyle="italic"

            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/cancelbtn"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_close_black_24"
                app:tint="@color/secondaryblue" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/donebtn"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_done_black_24"
                app:tint="@color/secondaryblue" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>